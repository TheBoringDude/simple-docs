---
import Seo from "../components/Seo.astro";

const { title, description, images } = Astro.props;
---

<html lang="en">
  <head>
    <Seo {title} {description} {images} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      type="text/css"
      href={Astro.resolve("../style/global.css")} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet" />
  </head>
  <body class="antialiased">
    <main>
      <slot />
    </main>
  </body>
</html>
